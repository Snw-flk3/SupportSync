@{
    ViewBag.Title = "Home";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style>
        /* General Styling */
        body {
            font-family: 'Helvetica Neue', sans-serif;
            background-color: #F0F8FF; /* Light baby blue background */
            margin: 0;
            padding: 0;
            color: #2D3A3A; /* Dark mint text color */
        }

        /* Hero Section Styling */
        .hero-section {
            padding: 6rem 0;
            background: linear-gradient(135deg, #A3E4D7, #77D1C9); /* Mint gradient */
            color: #fff;
            text-align: center;
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1);
            margin-bottom: 50px;
            border-bottom: 4px solid #77D1C9; /* Mint accent border */
        }

            .hero-section h1 {
                font-size: 4rem;
                font-weight: 900;
                margin-bottom: 1rem;
                text-transform: uppercase;
                letter-spacing: 2px;
                color: #2A3C3D; /* Dark mint color for heading */
            }

            .hero-section p {
                font-size: 1.4rem;
                color: #E5E7EB;
                margin-bottom: 2rem;
                letter-spacing: 0.5px;
            }

        .btn-primary {
            background-color: #77D1C9; /* Mint button color */
            border-color: #77D1C9;
            padding: 12px 30px;
            font-size: 1.2rem;
            font-weight: 700;
            transition: background-color 0.3s ease, transform 0.2s ease;
            letter-spacing: 1px;
        }

            .btn-primary:hover {
                background-color: #65B7B2; /* Slightly darker mint hover */
                border-color: #65B7B2;
                transform: scale(1.05);
            }

        /* Info Section */
        .info-section {
            padding: 4rem 0;
            text-align: center;
            background-color: #ffffff;
            border-radius: 15px; /* Rounded corners for softer look */
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1); /* Soft shadow for depth */
            margin-top: -30px;
            background: linear-gradient(145deg, #E1F5F1, #A3E4D7); /* Light mint gradient */
        }

            .info-section h2 {
                font-size: 3rem;
                font-weight: 700;
                color: #2D3A3A; /* Dark mint for headings */
                margin-bottom: 1.5rem;
                letter-spacing: 1px;
            }

            .info-section p {
                font-size: 1.15rem;
                color: #6B7280;
                max-width: 800px;
                margin: 0 auto;
                line-height: 1.7;
                letter-spacing: 0.5px;
            }

        /* Service Cards Styling */
        .services-list .card {
            border: none;
            border-radius: 12px; /* Rounded corners */
            background: linear-gradient(145deg, #E0F7FA, #B2EBF2); /* Soft blue gradient */
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.1); /* Soft shadow for depth */
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            margin-bottom: 2rem;
            overflow: hidden;
        }

            .services-list .card:hover {
                transform: translateY(-8px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.15);
            }

        .services-list .card-title {
            font-size: 1.8rem;
            font-weight: 700;
            color: #2A3C3D; /* Dark mint color */
            margin-top: 1.5rem;
            letter-spacing: 0.5px;
        }

        .services-list .card-text {
            font-size: 1rem;
            color: #4B5563;
            padding-bottom: 1.5rem;
        }

        /* Footer Styling */
        .footer {
            padding: 3rem 0;
            background-color: #2D3A3A; /* Dark mint footer */
            color: #F0F8FF; /* Light baby blue text */
            text-align: center;
            border-top: 6px solid #77D1C9; /* Mint accent border on footer */
        }

            .footer span {
                font-size: 1.2rem;
            }

    </style>
</head>

<body>
    <!-- Hero Section -->
    <div class="hero-section">
        <h1>Welcome to ManageMint</h1>
        <p>Your go-to solution for in-house management.</p>
        <p>
            <a asp-controller="Login" asp-action="Index" class="btn btn-primary btn-lg">Login</a>
        </p>
    </div>

    <!-- About Section -->
    <section class="container info-section my-5">
        <h2>About Us</h2>
        <p>
            ManageMint is a forward-thinking platform built to streamline in-house operations and maximize efficiency. Designed to meet the needs of modern organizations, we provide tools that simplify asset management, resource allocation, and much more.
        </p>
    </section>

    <!-- Services Section -->
    <section class="container info-section my-5">
        <h2>Our Services</h2>
        <div class="row services-list">
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Real-Time Asset Tracking</h5>
                        <p class="card-text">
                            Manage and track all your organization’s resources with ease using our real-time asset tracking feature.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Optimized Resource Allocation</h5>
                        <p class="card-text">
                            Maximize efficiency by ensuring your resources are optimally allocated and used when needed.
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">Customizable Solutions</h5>
                        <p class="card-text">
                            Tailor our platform to suit the specific needs of your organization, streamlining your workflow.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </section>

  

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
