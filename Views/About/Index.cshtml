@{
    ViewBag.Title = "About Us";
    Layout = "~/Views/Shared/_Layout.cshtml"; // Ensures consistency with your app's design
}

<div class="about-us">
    <div class="header text-center">
        <h2>About HopeWorldWide</h2>
        <p class="lead">Empowering communities, inspiring hope, and making a difference globally.</p>
    </div>

    <div class="content">
        <section class="mission">
            <h3>Our Mission</h3>
            <p>
                At HopeWorldWide, our mission is to uplift underserved communities worldwide by providing resources, opportunities,
                and hope for a brighter future. We aim to bridge the gap between needs and solutions by leveraging innovation,
                collaboration, and compassion.
            </p>
        </section>

        <section class="vision">
            <h3>Our Vision</h3>
            <p>
                We envision a world where every individual has the tools and support they need to thrive. Through sustainable programs,
                impactful partnerships, and a commitment to excellence, we strive to leave a lasting impact on lives around the globe.
            </p>
        </section>

        <section class="values">
            <h3>Our Core Values</h3>
            <ul>
                <li><strong>Compassion:</strong> Serving with empathy and kindness.</li>
                <li><strong>Integrity:</strong> Upholding transparency and accountability in all our actions.</li>
                <li><strong>Collaboration:</strong> Building strong partnerships to amplify our impact.</li>
                <li><strong>Innovation:</strong> Embracing creative solutions to address global challenges.</li>
            </ul>
        </section>

        <section class="team">
            <h3>Meet the Team</h3>
            <p>
                Behind HopeWorldWide is a dedicated team of visionaries, leaders, and changemakers passionate about transforming lives.
                From our founders to our volunteers, each individual contributes their unique talents to drive our mission forward.
            </p>
        </section>

        <section class="contact">
            <h3>Get in Touch</h3>
            <p>
                Have questions, suggestions, or want to get involved? We’d love to hear from you! Reach out to us at
                <a href="mailto:hope.worldwidehelp@gmail.com">hope.worldwidehelp@gmail.com</a>.
            </p>
        </section>
    </div>
</div>

<!-- Custom CSS for the About Us Page -->
<style>
    .about-us {
        margin: 20px auto;
        max-width: 800px;
        font-family: Arial, sans-serif;
        line-height: 1.6;
    }

    .about-us .header {
        margin-bottom: 30px;
    }

    .about-us .header h2 {
        font-size: 2.5em;
        color: #333;
    }

    .about-us .header p.lead {
        font-size: 1.2em;
        color: #555;
    }

    .about-us .content section {
        margin-bottom: 30px;
    }

    .about-us .content section h3 {
        font-size: 1.8em;
        color: #4A90E2;
        margin-bottom: 10px;
    }

    .about-us .content section p {
        font-size: 1em;
        color: #555;
        margin-bottom: 10px;
    }

    .about-us .content section ul {
        list-style: disc;
        margin-left: 20px;
    }

    .about-us .content section ul li {
        font-size: 1em;
        color: #555;
        margin-bottom: 5px;
    }

    .about-us .content section a {
        color: #4A90E2;
        text-decoration: none;
    }

    .about-us .content section a:hover {
        text-decoration: underline;
    }
</style>
