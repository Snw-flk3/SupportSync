@model IEnumerable<HopeWorldWide.Models.DeliveryHistory>

@{
    ViewBag.Title = "Delivery History";
    Layout = "~/Views/Shared/AssetLayout.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-10 text-center mb-4">
            <h2 class="fw-bold text-primary">Delivery History</h2>
            <p class="text-muted">Review and manage delivery records efficiently with an intuitive interface.</p>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="table-responsive shadow-sm rounded">
                <table class="table table-striped table-hover">
                    <thead class="table-light-blue">
                        <tr>
                            <th>Delivery ID</th>
                            <th>Driver ID</th>
                            <th>Quantity</th>
                            <th>Location</th>
                            <th>Status</th>
                            <th>Delivery Image</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null && Model.Any())
                        {
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.DeliveryId</td>
                                    <td>@item.DriverId</td>
                                    <td>@item.Quantity</td>
                                    <td>@item.Location</td>
                                    <td>
                                        <span class="badge bg-@(item.Status.ToLower() == "completed" ? "success" : "warning")">
                                            @item.Status
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        @if (!string.IsNullOrEmpty(item.Image))
                                        {
                                            <img src="@item.Image" alt="Delivery Image" style="width: 100px; height: 100px; object-fit: cover;" class="shadow-sm rounded" />
                                        }
                                        else
                                        {
                                            <span class="text-muted">No Image</span>
                                        }
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="7" class="text-center text-muted">No delivery history available.</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            <!-- Pagination Controls -->
            <div class="d-flex justify-content-center mt-4">
                <nav aria-label="Page navigation">
                    <ul class="pagination">
                        @if (ViewBag.CurrentPage > 1)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Dashboard", new { page = ViewBag.CurrentPage - 1 })">Previous</a>
                            </li>
                        }

                        @for (int i = 1; i <= ViewBag.TotalPages; i++)
                        {
                            <li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
                                <a class="page-link" href="@Url.Action("Dashboard", new { page = i })">@i</a>
                            </li>
                        }

                        @if (ViewBag.CurrentPage < ViewBag.TotalPages)
                        {
                            <li class="page-item">
                                <a class="page-link" href="@Url.Action("Dashboard", new { page = ViewBag.CurrentPage + 1 })">Next</a>
                            </li>
                        }
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #f0f8ff;
    }

    .table-light-blue {
        background-color: #e3f2fd;
        color: #0d47a1;
    }

    .table-hover tbody tr:hover {
        background-color: #bbdefb;
    }

    .text-primary {
        color: #0d47a1 !important;
    }

    .btn-primary {
        background-color: #64b5f6;
        border-color: #64b5f6;
    }

        .btn-primary:hover {
            background-color: #42a5f5;
            border-color: #42a5f5;
        }

    .table-responsive {
        background: #ffffff;
        border-radius: 8px;
        overflow: hidden;
    }

    .badge-success {
        background-color: #81c784;
    }

    .badge-warning {
        background-color: #ffb74d;
    }

    /* Active page in pagination */
    .pagination .page-item.active .page-link {
        background-color: #42a5f5;
        border-color: #42a5f5;
    }
</style>

