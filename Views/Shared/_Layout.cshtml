<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style>
        /* Navbar styling */
        .navbar {
            background-color: #f0f8ff; /* Light baby blue background */
            border-radius: 0 0 15px 15px; /* Rounded bottom corners */
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1); /* Soft shadow for depth */
        }

        .navbar-brand {
            font-size: 1.5rem; /* Slightly larger text for branding */
            font-weight: bold;
            color: #4A90E2; /* Baby blue color for branding */
        }

        .nav-link {
            color: #333 !important; /* Dark text color for links */
            font-weight: bold;
            transition: color 0.3s ease;
        }

            .nav-link:hover {
                color: #1E88E5 !important; /* Darker blue on hover */
            }

        .navbar-toggler {
            background-color: #4A90E2; /* Button color matching the brand */
        }

        .navbar-toggler-icon {
            background-image: url("data:image/svg+xml;charset=utf8,%3Csvg xmlns='http://www.w3.org/2000/svg' viewBox='0 0 30 30'%3E%3Cpath stroke='rgba(255, 255, 255, 1)' stroke-width='2' d='M3 7h24M3 15h24M3 23h24'/%3E%3C/svg%3E");
        }

        /* Footer styling */
        .footer {
            background-color: #f0f8ff; /* Light baby blue background */
            padding: 15px 0; /* Padding for footer */
            box-shadow: 0 -2px 5px rgba(0, 0, 0, 0.1); /* Soft shadow above footer */
        }

            .footer .text-muted {
                color: #333; /* Dark text for footer */
            }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container">
            <a class="navbar-brand" href="/">Hope Worldwide</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <!-- Removed the Register link below as it is not secure -->
                   <!-- <li class="nav-item">
                        <a class="nav-link" asp-controller="Asset" asp-action="Index">Register</a>
                    </li>  -->
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Login" asp-action="Index">Login</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="About" asp-action="Index">About Us</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
    </div>

    <footer class="footer">
        <div class="container text-center">
            <span class="text-muted">&copy; 2024 - Hope Worldwide</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
