<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_spiral"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Logo Image -->
    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/app_logo"
        android:src="@drawable/asset_sync_logo" />

    <!-- Heading TextView -->
    <TextView
        android:id="@+id/textViewHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/assetsync"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/Blue" />

    <!-- Tagline TextView -->
    <TextView
        android:id="@+id/textViewTagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/manage_your_assets_effortlessly"
        android:textColor="@color/DarkBlue"
        android:textSize="18sp" />

    <!-- Email Address EditText -->
    <EditText
        android:id="@+id/editTextEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:autofillHints="emailAddress"
        android:hint="@string/email_address"
        android:inputType="textEmailAddress"
        android:padding="12dp"
        android:textColor="@color/DarkBlue"
        android:textColorHint="@color/gray" />

    <!-- Password EditText -->
    <EditText
        android:id="@+id/editTextPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:autofillHints="password"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:padding="12dp"
        android:textColor="@color/DarkBlue"
        android:textColorHint="@color/gray" />

    <!-- Forgot Password TextView -->
    <TextView
        android:id="@+id/textViewForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        android:focusable="true"
        android:padding="15dp"
        android:text="@string/forgot_password"
        android:textColor="@color/Blue"
        android:textSize="14sp" />

    <!-- Button for AssetHub -->
    <Button
        android:id="@+id/buttonLoginAssetHub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/DarkBlue"
        android:padding="12dp"
        android:text="@string/login_to_assethub"
        android:textColor="@color/white" />

    <!-- Button for StockHub -->
    <Button
        android:id="@+id/buttonLoginStockHub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/DarkBlue"
        android:padding="12dp"
        android:text="@string/login_to_stockhub"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button" />

    <!-- Light/Dark Mode MaterialSwitch -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchLightDarkMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="@string/light_dark_mode"
        android:textSize="14sp"
        android:textColor="@color/DarkBlue"
        app:switchMinWidth="60dp"
        app:switchPadding="10dp" />
</LinearLayout>
