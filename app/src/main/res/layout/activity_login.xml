<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_spiral"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="24dp">

    <!-- Logo Image -->
    <ImageView
        android:id="@+id/imageLogo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:contentDescription="@string/app_logo"
        android:src="@drawable/logo"
        android:background="@drawable/rounded_logo_background"
        android:padding="15dp"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true" />


    <!-- Heading TextView -->
    <TextView
        android:id="@+id/textViewHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="@string/assetsync"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="@color/Blue"
        android:fontFamily="@font/poppins_bold" />

    <!-- Tagline TextView -->
    <TextView
        android:id="@+id/textViewTagline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/manage_your_assets_effortlessly"
        android:textColor="@color/DarkBlue"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_regular" />

    <!-- Email Address EditText -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxStrokeColor="@color/Blue">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/email_address"
            android:inputType="textEmailAddress"
            android:textColor="@color/DarkBlue"
            android:textColorHint="@color/gray" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Password EditText -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        app:boxBackgroundMode="outline"
        app:boxCornerRadiusTopStart="8dp"
        app:boxCornerRadiusTopEnd="8dp"
        app:boxCornerRadiusBottomStart="8dp"
        app:boxCornerRadiusBottomEnd="8dp"
        app:boxStrokeColor="@color/Blue">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/password"
            android:inputType="textPassword"
            android:textColor="@color/DarkBlue"
            android:textColorHint="@color/gray" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Forgot Password TextView -->
    <TextView
        android:id="@+id/textViewForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="32dp"
        android:clickable="true"
        android:focusable="true"
        android:text="@string/forgot_password"
        android:textColor="@color/Blue"
        android:textSize="14sp"
        android:fontFamily="@font/poppins_medium" />

    <!-- Button for AssetHub -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonLoginAssetHub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/login_to_assethub"
        android:textColor="@color/white"
        app:cornerRadius="8dp"
        app:backgroundTint="@color/DarkBlue" />

    <!-- Button for StockHub -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonLoginStockHub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="@string/login_to_stockhub"
        android:textColor="@color/white"
        app:cornerRadius="8dp"
        app:backgroundTint="@color/DarkBlue" />

    <!-- Light/Dark Mode MaterialSwitch -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switchLightDarkMode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:text="@string/light_dark_mode"
        android:textSize="14sp"
        android:textColor="@color/DarkBlue"
        app:switchMinWidth="60dp"
        app:switchPadding="10dp" />
</LinearLayout>
